{
  "ownerApp": "Travel Application",
  "name": "bookTripSaga",
  "description": "Workflow for Saga of booking a trip",
  "version": 1,
  "tasks": [
    {
      "name": "bookHotel",
      "taskReferenceName": "bookHotel",
      "inputParameters": {
        "bookHotelRequest": "${workflow.input.bookHotelRequest}"
      },
      "type": "SIMPLE",
      "optional": false,
      "asyncComplete": false
    },
    {
      "name": "bookFlight",
      "taskReferenceName": "bookFlight",
      "inputParameters": {
        "bookFlightTask": "${workflow.input.bookFlightTask}"
      },
      "type": "SIMPLE",
      "optional": false,
      "asyncComplete": false
    },
    {
      "name": "confirmHotel",
      "taskReferenceName": "confirmHotel",
      "inputParameters": {
        "confirmHotelBooking": "${bookHotel.output.bookHotelResponse}"
      },
      "type": "SIMPLE",
      "optional": false,
      "asyncComplete": false
    },
    {
      "name": "confirmTrip",
      "taskReferenceName": "confirmTrip",
      "inputParameters": {
        "confirmHotelInTripBooking": "${bookHotel.output.bookHotelResponse}",
        "confirmFlightInTripBooking": "${bookFlight.output.bookFlightResponse}"
      },
      "type": "SIMPLE",
      "optional": false,
      "asyncComplete": false
    }
  ],
  "inputParameters": [
    "bookHotelRequest",
    "bookFlightTask"
  ],
  "outputParameters": {},
  "failureWorkflow": "compensateBookTripSaga",
  "schemaVersion": 2,
  "restartable": true,
  "workflowStatusListenerEnabled": false,
  "ownerEmail": "travelService@beispielMail.com",
  "timeoutPolicy": "ALERT_ONLY",
  "variables": {}
}